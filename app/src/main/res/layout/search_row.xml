<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchExpertsLL"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="3"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/expertImg"
        android:layout_width="113dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_weight="2"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/expertName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Expert's Name" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/co3"
            android:padding="5dp"
            app:cardCornerRadius="30dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/expertExperience"
                android:layout_width="wrap_content"
                android:padding="4dp"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:text="Years of expert's experience " />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/expertRate"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>